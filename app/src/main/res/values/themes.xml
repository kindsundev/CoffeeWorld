<resources>

    <style name="Base.Theme.CoffeeWorld" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/coffee_primary</item>
        <item name="colorPrimaryDark">@color/coffee_primary_dark</item>
        <item name="colorAccent">@color/coffee_accent</item>
        <item name="colorControlNormal">@color/coffee_control_normal</item>
        <item name="colorControlHighlight">@color/coffee_control_highlight</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/coffee_text_primary</item>
        <item name="android:textColorSecondary">@color/coffee_text_secondary</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.CoffeeWorld" parent="Base.Theme.CoffeeWorld" />

    <style name="bottom_nav" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_marginTop">-2dp</item>
    </style>

    <style name="tool_bar_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="image_rounded_corner">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="image_circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="fab_circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="dialog_material" parent="@style/MaterialAlertDialog.MaterialComponents">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="confirm_alert_dialog">
        <item name="buttonBarPositiveButtonStyle">@style/alert_button_positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/alert_button_neutral</item>
    </style>

    <style name="alert_button_positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/coffee_primary_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="alert_button_neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="toast_network">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/status_warning</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_baseline_network_error</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_error">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/status_error</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_baseline_warning</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_success">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/status_success</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_baseline_done_24</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_warning">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/status_warning</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_baseline_warning</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_thanks">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/status_thanks</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_baseline_thanks</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="toast_permission">
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/status_thanks</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_baseline_lock_open_24</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

</resources>