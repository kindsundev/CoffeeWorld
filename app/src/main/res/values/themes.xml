<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeWorld" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/coffee_primary</item>
        <item name="colorPrimaryDark">@color/coffee_primary_dark</item>
        <item name="colorAccent">@color/coffee_accent</item>

        <!-- Add more customized colors here -->
        <item name="colorControlNormal">@color/coffee_control_normal</item>
        <item name="colorControlHighlight">@color/coffee_control_highlight</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/coffee_text_primary</item>
        <item name="android:textColorSecondary">@color/coffee_text_secondary</item>

        <!-- custom status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.CoffeeWorld" parent="Base.Theme.CoffeeWorld" />

    <style name="ViewVerticalLine">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">-15dp</item>
        <item name="android:layout_marginEnd">-15dp</item>
        <item name="android:contentDescription">@string/logo</item>
        <item name="android:src">@drawable/custom_vertical_line</item>
    </style>

</resources>