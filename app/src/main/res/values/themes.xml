<resources>

    <style name="Base.Theme.CoffeeWorld" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/coffee_primary</item>
        <item name="colorPrimaryDark">@color/coffee_primary_dark</item>
        <item name="colorAccent">@color/coffee_accent</item>
        <item name="colorControlNormal">@color/coffee_control_normal</item>
        <item name="colorControlHighlight">@color/coffee_control_highlight</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/coffee_text_primary</item>
        <item name="android:textColorSecondary">@color/coffee_text_secondary</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.CoffeeWorld" parent="Base.Theme.CoffeeWorld" />

    <style name="bottom_nav" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_marginTop">-2dp</item>
    </style>

    <style name="image_rounded_corner">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="image_circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="tool_bar_title_size">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

</resources>