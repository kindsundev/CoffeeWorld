<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="kind.sun.dev.coffeeworld.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="kind.sun.dev.coffeeworld.ui.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="kind.sun.dev.coffeeworld.ui.order.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/cafeFragment"
        android:name="kind.sun.dev.coffeeworld.ui.cafe.CafeFragment"
        android:label="fragment_cafe"
        tools:layout="@layout/fragment_cafe">
        <action
            android:id="@+id/action_cafeFragment_to_cafeDetailFragment"
            app:destination="@id/cafeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more">
        <action
            android:id="@+id/action_moreFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_moreFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"  />
        <action
            android:id="@+id/action_moreFragment_to_securityFragment"
            app:destination="@id/securityFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_moreFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"  />
        <action
            android:id="@+id/action_moreFragment_to_orderReviewsFragment"
            app:destination="@id/orderReviewsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_moreFragment_to_termsConditionsFragment"
            app:destination="@id/termsConditionsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_moreFragment_to_huntDealsFragment"
            app:destination="@id/huntDealsFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_moreFragment_to_exploreFragment"
            app:destination="@id/exploreFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_moreFragment_to_paymentFragment"
            app:destination="@id/paymentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <dialog
        android:id="@+id/cafeDetailFragment"
        android:name="kind.sun.dev.coffeeworld.ui.cafe.CafeDetailFragment"
        android:label="CafeDetailFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.user.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_avatarFragment"
            app:destination="@id/avatarFragment" />
    </fragment>
    <fragment
        android:id="@+id/securityFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.user.sercurity.SecurityFragment"
        android:label="SecurityFragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.support.FeedbackFragment"
        android:label="FeedbackFragment" />
    <fragment
        android:id="@+id/orderReviewsFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.support.OrderReviewsFragment"
        android:label="OrderReviewsFragment" />
    <fragment
        android:id="@+id/huntDealsFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.utility.HuntDealsFragment"
        android:label="HuntDealsFragment" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.utility.ExploreFragment"
        android:label="ExploreFragment" />
    <fragment
        android:id="@+id/termsConditionsFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.utility.TermsConditionsFragment"
        android:label="TermsConditionsFragment" />
    <fragment
        android:id="@+id/paymentFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.user.payment.PaymentFragment"
        android:label="PaymentFragment" />
    <dialog
        android:id="@+id/avatarFragment"
        android:name="kind.sun.dev.coffeeworld.ui.more.user.profile.AvatarFragment"
        android:label="AvatarFragment" />
</navigation>