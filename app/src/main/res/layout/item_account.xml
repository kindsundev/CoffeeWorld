<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        tools:background="@color/white_light"
        tools:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/account"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_layout_solid_white_border_8"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/user"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    app:srcCompat="@drawable/ic_baseline_account_circle_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:layout_toStartOf="@id/ic_person_next"
                    android:layout_toEndOf="@id/ic_person"
                    android:paddingHorizontal="16dp"
                    android:text="@string/user"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ic_person_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/next"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/ic_person"
                    android:layout_alignStart="@id/ic_person"
                    android:background="@color/white_light" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/security"
                    app:srcCompat="@drawable/ic_baseline_security_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:layout_toStartOf="@id/ic_security_next"
                    android:layout_toEndOf="@id/ic_security"
                    android:paddingHorizontal="16dp"
                    android:text="@string/security"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ic_security_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/next"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/ic_security"
                    android:layout_alignStart="@id/ic_security"
                    android:background="@color/white_light" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/settings"
                    app:srcCompat="@drawable/ic_baseline_settings_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:layout_toStartOf="@id/ic_settings_next"
                    android:layout_toEndOf="@id/ic_settings"
                    android:paddingHorizontal="16dp"
                    android:text="@string/settings"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ic_settings_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/next"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/ic_settings"
                    android:layout_alignStart="@id/ic_settings"
                    android:background="@color/white_light" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ic_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/payment"
                    app:srcCompat="@drawable/ic_baseline_payment_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:layout_toStartOf="@id/ic_logout_next"
                    android:layout_toEndOf="@id/ic_payment"
                    android:paddingHorizontal="16dp"
                    android:text="@string/payment"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/ic_logout_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:contentDescription="@string/next"
                    app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</layout>